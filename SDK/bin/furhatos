##############################################################################
##
##  furhatos start up script for UN*X
##
##############################################################################

# Attempt to set APP_HOME
# Resolve links: $0 may be a link
PRG="$0"
# Need this for relative symlinks.
while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`"/$link"
    fi
done
SAVED="`pwd`"
cd "`dirname \"$PRG\"`/.." >/dev/null
APP_HOME="`pwd -P`"
cd "$SAVED" >/dev/null

APP_NAME="furhatos"
APP_BASE_NAME=`basename "$0"`

# Add default JVM options here. You can also use JAVA_OPTS and FURHATOS_OPTS to pass JVM options to this script.
DEFAULT_JVM_OPTS='"-Dfurhatos.system.virtual" "-Dfile.encoding=UTF-8"'

# Use the maximum available, or set MAX_FD != -1 to use that value.
MAX_FD="maximum"

warn () {
    echo "$*"
}

die () {
    echo
    echo "$*"
    echo
    exit 1
}

# OS specific support (must be 'true' or 'false').
cygwin=false
msys=false
darwin=false
nonstop=false
case "`uname`" in
  CYGWIN* )
    cygwin=true
    ;;
  Darwin* )
    darwin=true
    ;;
  MINGW* )
    msys=true
    ;;
  NONSTOP* )
    nonstop=true
    ;;
esac

CLASSPATH=$APP_HOME/lib/furhat-java-application.jar:$APP_HOME/lib/controller.jar:$APP_HOME/lib/jzmq-jni-3.1.1-SNAPSHOT.jar:$APP_HOME/lib/jzmq-jni-3.1.1-SNAPSHOT-native-amd64-Linux.jar:$APP_HOME/lib/firmware.jar:$APP_HOME/lib/cerevoice_eng.jar:$APP_HOME/lib/utils.jar:$APP_HOME/lib/furhat-commons-1.21.0.jar:$APP_HOME/lib/khttp-1.0.0.jar:$APP_HOME/lib/json-20180130.jar:$APP_HOME/lib/kotlin-stdlib-jdk8-1.3.70.jar:$APP_HOME/lib/kotlinx-coroutines-core-1.2.1.jar:$APP_HOME/lib/spek-junit-platform-engine-1.1.0.jar:$APP_HOME/lib/spek-api-1.1.0.jar:$APP_HOME/lib/kotlin-reflect-1.3.70.jar:$APP_HOME/lib/liblinear-2.30.jar:$APP_HOME/lib/spark-core-2.6.0.jar:$APP_HOME/lib/client-sdk-1.11.0.jar:$APP_HOME/lib/log4j-core-2.9.1.jar:$APP_HOME/lib/log4j-api-2.9.1.jar:$APP_HOME/lib/jSerialComm-1.3.11.jar:$APP_HOME/lib/aws-java-sdk-polly-1.11.705.jar:$APP_HOME/lib/aws-java-sdk-s3-1.11.702.jar:$APP_HOME/lib/aws-java-sdk-kms-1.11.702.jar:$APP_HOME/lib/aws-java-sdk-core-1.11.705.jar:$APP_HOME/lib/jmespath-java-1.11.705.jar:$APP_HOME/lib/commons-io-2.5.jar:$APP_HOME/lib/commons-lang-2.6.jar:$APP_HOME/lib/minimal-json-0.9.4.jar:$APP_HOME/lib/jnativehook-2.0.3.jar:$APP_HOME/lib/jasypt-1.9.2.jar:$APP_HOME/lib/google-cloud-translate-1.94.1.jar:$APP_HOME/lib/google-cloud-speech-0.80.0-beta.jar:$APP_HOME/lib/google-cloud-core-grpc-1.62.0.jar:$APP_HOME/lib/google-cloud-core-http-1.91.3.jar:$APP_HOME/lib/google-cloud-core-1.91.3.jar:$APP_HOME/lib/gax-grpc-1.50.1.jar:$APP_HOME/lib/gax-httpjson-0.66.1.jar:$APP_HOME/lib/gax-1.50.1.jar:$APP_HOME/lib/grpc-alts-1.25.0.jar:$APP_HOME/lib/google-auth-library-oauth2-http-0.18.0.jar:$APP_HOME/lib/google-api-services-translate-v2-rev20170525-1.30.1.jar:$APP_HOME/lib/google-api-client-1.30.4.jar:$APP_HOME/lib/google-http-client-jackson2-1.32.1.jar:$APP_HOME/lib/google-http-client-appengine-1.32.1.jar:$APP_HOME/lib/google-oauth-client-1.30.3.jar:$APP_HOME/lib/google-http-client-1.32.1.jar:$APP_HOME/lib/httpclient-4.5.10.jar:$APP_HOME/lib/httpcore-4.4.12.jar:$APP_HOME/lib/usb4java-1.2.0.jar:$APP_HOME/lib/resty-0.3.2.jar:$APP_HOME/lib/jna-platform-4.4.0.jar:$APP_HOME/lib/jna-4.4.0.jar:$APP_HOME/lib/jni4net.j-0.8.8.0.jar:$APP_HOME/lib/kotlin-stdlib-jdk7-1.3.70.jar:$APP_HOME/lib/kotlin-stdlib-1.3.70.jar:$APP_HOME/lib/kotlin-stdlib-common-1.3.70.jar:$APP_HOME/lib/slf4j-nop-1.7.25.jar:$APP_HOME/lib/slf4j-api-1.7.25.jar:$APP_HOME/lib/jetty-webapp-9.4.4.v20170414.jar:$APP_HOME/lib/websocket-server-9.4.4.v20170414.jar:$APP_HOME/lib/jetty-servlet-9.4.4.v20170414.jar:$APP_HOME/lib/jetty-security-9.4.4.v20170414.jar:$APP_HOME/lib/jetty-server-9.4.4.v20170414.jar:$APP_HOME/lib/websocket-servlet-9.4.4.v20170414.jar:$APP_HOME/lib/mallet-2.0.8.jar:$APP_HOME/lib/univocity-parsers-2.5.0.jar:$APP_HOME/lib/grpc-grpclb-1.25.0.jar:$APP_HOME/lib/protobuf-java-util-3.10.0.jar:$APP_HOME/lib/grpc-netty-shaded-1.25.0.jar:$APP_HOME/lib/grpc-core-1.25.0.jar:$APP_HOME/lib/gson-2.8.5.jar:$APP_HOME/lib/commons-csv-1.5.jar:$APP_HOME/lib/jeromq-0.5.2.jar:$APP_HOME/lib/jwnl-1.4_rc3.jar:$APP_HOME/lib/commons-logging-1.2.jar:$APP_HOME/lib/ion-java-1.0.2.jar:$APP_HOME/lib/jackson-databind-2.6.7.3.jar:$APP_HOME/lib/jackson-dataformat-cbor-2.6.7.jar:$APP_HOME/lib/joda-time-2.8.1.jar:$APP_HOME/lib/commons-codec-1.11.jar:$APP_HOME/lib/proto-google-cloud-speech-v1beta1-0.45.0.jar:$APP_HOME/lib/proto-google-cloud-speech-v1p1beta1-0.45.0.jar:$APP_HOME/lib/proto-google-cloud-speech-v1-0.45.0.jar:$APP_HOME/lib/grpc-stub-1.25.0.jar:$APP_HOME/lib/grpc-auth-1.25.0.jar:$APP_HOME/lib/proto-google-cloud-translate-v3beta1-0.77.1.jar:$APP_HOME/lib/proto-google-cloud-translate-v3-1.0.1.jar:$APP_HOME/lib/proto-google-iam-v1-0.13.0.jar:$APP_HOME/lib/api-common-1.8.1.jar:$APP_HOME/lib/javax.annotation-api-1.3.2.jar:$APP_HOME/lib/libusb4java-1.2.0-linux-x86.jar:$APP_HOME/lib/libusb4java-1.2.0-linux-x86_64.jar:$APP_HOME/lib/libusb4java-1.2.0-linux-arm.jar:$APP_HOME/lib/libusb4java-1.2.0-windows-x86.jar:$APP_HOME/lib/libusb4java-1.2.0-windows-x86_64.jar:$APP_HOME/lib/libusb4java-1.2.0-osx-x86.jar:$APP_HOME/lib/libusb4java-1.2.0-osx-x86_64.jar:$APP_HOME/lib/commons-lang3-3.5.jar:$APP_HOME/lib/javacc-4.1.jar:$APP_HOME/lib/annotations-13.0.jar:$APP_HOME/lib/javax.servlet-api-3.1.0.jar:$APP_HOME/lib/websocket-client-9.4.4.v20170414.jar:$APP_HOME/lib/jetty-client-9.4.4.v20170414.jar:$APP_HOME/lib/jetty-http-9.4.4.v20170414.jar:$APP_HOME/lib/websocket-common-9.4.4.v20170414.jar:$APP_HOME/lib/jetty-io-9.4.4.v20170414.jar:$APP_HOME/lib/jetty-xml-9.4.4.v20170414.jar:$APP_HOME/lib/websocket-api-9.4.4.v20170414.jar:$APP_HOME/lib/junit-4.10.jar:$APP_HOME/lib/bsh-2.0b4.jar:$APP_HOME/lib/jgrapht-0.6.0.jar:$APP_HOME/lib/trove4j-2.0.2.jar:$APP_HOME/lib/mtj-0.9.14.jar:$APP_HOME/lib/jdom-1.1.jar:$APP_HOME/lib/grpc-protobuf-1.25.0.jar:$APP_HOME/lib/grpc-protobuf-lite-1.25.0.jar:$APP_HOME/lib/grpc-api-1.25.0.jar:$APP_HOME/lib/proto-google-common-protos-1.17.0.jar:$APP_HOME/lib/protobuf-java-3.10.0.jar:$APP_HOME/lib/opencensus-contrib-http-util-0.24.0.jar:$APP_HOME/lib/guava-28.1-android.jar:$APP_HOME/lib/threetenbp-1.4.0.jar:$APP_HOME/lib/google-auth-library-credentials-0.18.0.jar:$APP_HOME/lib/jnacl-1.0.0.jar:$APP_HOME/lib/jackson-annotations-2.6.0.jar:$APP_HOME/lib/jackson-core-2.9.9.jar:$APP_HOME/lib/opencensus-contrib-grpc-metrics-0.21.0.jar:$APP_HOME/lib/opencensus-api-0.24.0.jar:$APP_HOME/lib/grpc-context-1.25.0.jar:$APP_HOME/lib/jetty-util-9.4.4.v20170414.jar:$APP_HOME/lib/hamcrest-core-1.1.jar:$APP_HOME/lib/netlib-java-0.9.3.jar:$APP_HOME/lib/perfmark-api-0.19.0.jar:$APP_HOME/lib/error_prone_annotations-2.3.3.jar:$APP_HOME/lib/jsr305-3.0.2.jar:$APP_HOME/lib/animal-sniffer-annotations-1.18.jar:$APP_HOME/lib/failureaccess-1.0.1.jar:$APP_HOME/lib/listenablefuture-9999.0-empty-to-avoid-conflict-with-guava.jar:$APP_HOME/lib/checker-compat-qual-2.5.5.jar:$APP_HOME/lib/j2objc-annotations-1.3.jar:$APP_HOME/lib/auto-value-annotations-1.6.6.jar:$APP_HOME/lib/arpack_combined_all-0.1.jar:$APP_HOME/lib/conscrypt-openjdk-uber-2.2.1.jar:$APP_HOME/lib/annotations-4.1.1.4.jar

# Determine the Java command to use to start the JVM.
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses strange locations for the executables
        JAVACMD="$JAVA_HOME/jre/sh/java"
    else
        JAVACMD="$JAVA_HOME/bin/java"
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
else
    JAVACMD="java"
    which java >/dev/null 2>&1 || die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH.

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
fi

# Increase the maximum file descriptors if we can.
if [ "$cygwin" = "false" -a "$darwin" = "false" -a "$nonstop" = "false" ] ; then
    MAX_FD_LIMIT=`ulimit -H -n`
    if [ $? -eq 0 ] ; then
        if [ "$MAX_FD" = "maximum" -o "$MAX_FD" = "max" ] ; then
            MAX_FD="$MAX_FD_LIMIT"
        fi
        ulimit -n $MAX_FD
        if [ $? -ne 0 ] ; then
            warn "Could not set maximum file descriptor limit: $MAX_FD"
        fi
    else
        warn "Could not query maximum file descriptor limit: $MAX_FD_LIMIT"
    fi
fi

# For Darwin, add options to specify how the application appears in the dock
if $darwin; then
    GRADLE_OPTS="$GRADLE_OPTS \"-Xdock:name=$APP_NAME\" \"-Xdock:icon=$APP_HOME/media/gradle.icns\""
fi

# For Cygwin or MSYS, switch paths to Windows format before running java
if [ "$cygwin" = "true" -o "$msys" = "true" ] ; then
    APP_HOME=`cygpath --path --mixed "$APP_HOME"`
    CLASSPATH=`cygpath --path --mixed "$CLASSPATH"`
    JAVACMD=`cygpath --unix "$JAVACMD"`

    # We build the pattern for arguments to be converted via cygpath
    ROOTDIRSRAW=`find -L / -maxdepth 1 -mindepth 1 -type d 2>/dev/null`
    SEP=""
    for dir in $ROOTDIRSRAW ; do
        ROOTDIRS="$ROOTDIRS$SEP$dir"
        SEP="|"
    done
    OURCYGPATTERN="(^($ROOTDIRS))"
    # Add a user-defined pattern to the cygpath arguments
    if [ "$GRADLE_CYGPATTERN" != "" ] ; then
        OURCYGPATTERN="$OURCYGPATTERN|($GRADLE_CYGPATTERN)"
    fi
    # Now convert the arguments - kludge to limit ourselves to /bin/sh
    i=0
    for arg in "$@" ; do
        CHECK=`echo "$arg"|egrep -c "$OURCYGPATTERN" -`
        CHECK2=`echo "$arg"|egrep -c "^-"`                                 ### Determine if an option

        if [ $CHECK -ne 0 ] && [ $CHECK2 -eq 0 ] ; then                    ### Added a condition
            eval `echo args$i`=`cygpath --path --ignore --mixed "$arg"`
        else
            eval `echo args$i`="\"$arg\""
        fi
        i=`expr $i + 1`
    done
    case $i in
        0) set -- ;;
        1) set -- "$args0" ;;
        2) set -- "$args0" "$args1" ;;
        3) set -- "$args0" "$args1" "$args2" ;;
        4) set -- "$args0" "$args1" "$args2" "$args3" ;;
        5) set -- "$args0" "$args1" "$args2" "$args3" "$args4" ;;
        6) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" ;;
        7) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" "$args6" ;;
        8) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" "$args6" "$args7" ;;
        9) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" "$args6" "$args7" "$args8" ;;
    esac
fi

# Escape application args
save () {
    for i do printf %s\\n "$i" | sed "s/'/'\\\\''/g;1s/^/'/;\$s/\$/' \\\\/" ; done
    echo " "
}
APP_ARGS=`save "$@"`

# Collect all arguments for the java command, following the shell quoting and substitution rules
eval set -- $DEFAULT_JVM_OPTS $JAVA_OPTS $FURHATOS_OPTS -classpath "\"$CLASSPATH\"" furhatos.controller.Controller "$APP_ARGS"

exec "$JAVACMD" "$@"
